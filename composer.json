{
    "name": "chimera/mapping",
    "description": "Useful annotations to configure the application layer of your software",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Lu√≠s Cobucci",
            "email": "lcobucci@gmail.com"
        }
    ],
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "require": {
        "php": "^7.2",
        "doctrine/annotations": "^1.6"
    },
    "require-dev": {
        "doctrine/coding-standard": "^4.0",
        "infection/infection": "^0.8",
        "phpstan/phpdoc-parser": "^0.3@dev",
        "phpstan/phpstan": "^0.10@dev",
        "phpstan/phpstan-phpunit": "^0.10@dev",
        "phpstan/phpstan-strict-rules": "^0.10@dev",
        "phpunit/phpunit": "^7.1",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Chimera\\Mapping\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chimera\\Mapping\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    }
}
